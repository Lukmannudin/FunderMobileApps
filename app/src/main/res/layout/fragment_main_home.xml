<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Home.MainHomeFragment">
    <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="90dp"
            android:layout_marginBottom="10dp"
            android:elevation="16dp">
        <RelativeLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:id="@+id/ab_user_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/icon_user_profile"
            />
            <TextView
                    android:layout_marginEnd="10dp"
                    android:layout_toLeftOf="@id/ab_search"
                    android:id="@+id/ab_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/icon_notification"
            />
            <TextView
                    android:layout_alignParentEnd="true"
                    android:id="@+id/ab_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/icon_search"
                    android:layout_marginEnd="15dp"
            />
        </RelativeLayout>
        <View
                android:background="@drawable/toolbar_dropshadow"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/rvAuction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>

