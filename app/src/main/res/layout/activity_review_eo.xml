<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhiteBackground"
        tools:context=".company.ReviewEO.ReviewEO">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhiteBackground"
            tools:context=".company.ReviewEO.ReviewEO"
            android:layout_marginBottom="90dp"
    >

        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/image_placeholder"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="40dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.497" android:id="@+id/circleImageView"/>
        <TextView
                android:textColor="@color/colorAccent"
                android:text="HIPMA UNIKOM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/circleImageView"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="16dp" android:id="@+id/textView"/>
        <TextView
                android:text="Mensosialisasikan aplikasi Ur-Scape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="300dp"
                android:gravity="center"
                android:textSize="22sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:id="@+id/textView2"/>
        <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:background="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:orientation="vertical"

                android:id="@+id/linearLayout3">
            <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorLightGray"
            />

            <TextView
                    android:text="How was the deal?"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
            />

            <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:numStars="5"
                    android:stepSize="1.0"
                    android:layout_marginBottom="10dp"
                    style="@style/ThemeOverlay.MaterialComponents.Light"
            />


            <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorLightGray"
            />

            <TextView
                    android:text="Tell us what happened"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
            />

            <android.support.design.widget.TextInputLayout
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                        android:id="@+id/descHapepned"
                        android:hint="Description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/bidAccepted"
                />
                <TextView
                        android:id="@+id/countDescription"
                        android:text="30 / 120"
                        android:layout_gravity="end"
                        android:layout_marginEnd="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <LinearLayout
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="7dp"
                android:paddingEnd="7dp"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="30dp" app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:textColor="@android:color/black"
                    android:text="Deal Details"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <CheckBox
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transfer Uang"
                    android:id="@+id/tUang"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>

            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            >

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/numberReq"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Account Number"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            >
                <android.support.design.widget.TextInputEditText
                        android:id="@+id/nameEventOrganizer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Account Name"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            >
                <android.support.design.widget.TextInputEditText
                        android:id="@+id/bankName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:hint="Bank Name"
                        android:focusable="true"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            >
                <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtFunding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:inputType="number"
                        android:editable="false"
                        android:hint="Funding"/>
            </android.support.design.widget.TextInputLayout>
            <CheckBox
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/kBarang"
                    android:text="Kirim Barang"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
            />

            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            >
                <android.support.design.widget.TextInputEditText
                        android:id="@+id/descGoods"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="Goods Spesification"/>
            </android.support.design.widget.TextInputLayout>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
            >

            </RelativeLayout>
            <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <TextView
                        android:id="@+id/fileChooserFillForm"
                        android:layout_below="@id/btnUploadProposal"
                        android:layout_toEndOf="@id/dlIconPdf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                />
            </RelativeLayout>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</ScrollView>