<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="140dp">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="140dp">
        <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="8dp"
                android:layout_height="100dp">

            <ImageView
                    android:id="@+id/ivDealHistorySponsor"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/image_placeholder"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="10dp"
            />
            <TextView
                    android:id="@+id/tvBidStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/ivDealHistorySponsor"
                    android:textSize="12sp"
                    android:text="Accepted"
                    android:textStyle="bold"
            />
            <TextView
                    android:id="@+id/tvBidName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="15sp"
                    android:layout_below="@id/tvBidStatus"
                    android:text="Pekan ini, Si Kasep Mulai Menjaring Calon Kepsek"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/ivDealHistorySponsor"
                    android:textColor="@android:color/black"
            />

            <TextView
                    android:id="@+id/tvDealHistoryCompanyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/ivDealHistorySponsor"
                    android:layout_alignParentBottom="true"
                    android:text="Pemerintah Kota Bandung"
                    android:textStyle="bold"
            />
            <TextView
                    android:layout_below="@id/tvBidName"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:gravity="bottom"
                    android:textSize="12sp"
                    android:layout_marginEnd="5dp"
                    android:id="@+id/tvDateDealHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/12/2018"
            />

        </RelativeLayout>
        <View
                android:layout_below="@id/tvDateAuctionList"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorLightGray"/>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>