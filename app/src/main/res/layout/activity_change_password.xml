<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_login"
        tools:context=".Login.ForgotPasswordActivity">


    <ImageView
            android:id="@+id/backChangePassword"
            android:src="@drawable/ic_arrow_back_blue_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <TextView
            android:id="@+id/titleChangePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textColor="@android:color/black"
            android:textSize="35sp"
            android:gravity="center"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="0dp" android:layout_marginTop="52dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="7dp"
            android:paddingEnd="7dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingBottom="35dp"
            app:layout_constraintTop_toBottomOf="@+id/titleChangePassword" android:layout_marginTop="28dp"
            app:layout_constraintHorizontal_bias="0.0">


        <EditText
                android:id="@+id/currentPassword"
                android:hint="Current password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_white"
                android:paddingLeft="15dp"
                android:layout_marginTop="35dp"
        />

        <EditText
                android:id="@+id/newPassword"
                android:hint="New Password"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:background="@drawable/rounded_white"
                android:paddingLeft="15dp"
        />
        <EditText
                android:id="@+id/confirmNewPassword"
                android:layout_marginTop="10dp"
                android:hint="Confirm new password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:background="@drawable/rounded_white"
                android:paddingLeft="15dp"
        />

        <Button
                android:id="@+id/btnChangePassword"
                android:layout_marginTop="20dp"
                android:text="Submit"
                android:background="@drawable/button_background_primary"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>