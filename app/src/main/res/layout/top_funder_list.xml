<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/rounded_rectangle"
        android:layout_margin="10dp"
        android:layout_marginBottom="30dp"
        android:layout_width="160dp"
        android:layout_height="170dp">

    <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/ivSponsorImage"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="10dp"
            fresco:roundedCornerRadius="10dp"
            fresco:roundTopEnd="true"
            fresco:roundTopStart="true"
            fresco:roundBottomEnd="true"
            fresco:roundBottomStart="true"/>

    <View android:layout_width="match_parent"
          android:layout_height="90dp"
          android:background="@drawable/rounded_bottom_rectangle"
          android:layout_marginBottom="0dp"
          android:id="@+id/view"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginEnd="0dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          android:layout_marginStart="0dp"
          app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
            android:id="@+id/tvSponsorTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Sponsor 1"
            android:textStyle="bold"
            android:textSize="24sp" android:layout_marginBottom="50dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            fresco:layout_constraintBottom_toBottomOf="parent"
    />
    <TextView
            android:id="@+id/tvSponsorCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="tvSponsorCompany"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>