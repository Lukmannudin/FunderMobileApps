<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".EventOrganizer.Chat.MainChatFragment">
    <include
            layout="@layout/toolbar"
            android:id="@+id/include2"/>
    <TextView
            android:visibility="gone"
            android:id="@+id/no_main_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_chat"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:textSize="25sp"
            android:padding="50dp"
            android:textColor="@color/lightGray"
    />
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/chatSwipeRefresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/include2">
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMainChat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_heading"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">
        </androidx.recyclerview.widget.RecyclerView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>