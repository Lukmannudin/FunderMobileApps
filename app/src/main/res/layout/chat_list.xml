<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="110dp">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@drawable/divider"
        />b
        <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_height="match_parent">


            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivChatList"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/image_placeholder"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="10dp"
            />
            <TextView
                    android:id="@+id/tvTitleChatList"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Pemerintah Kota Bandung"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_toEndOf="@id/ivChatList"
                    android:textColor="@android:color/black"
            />

            <TextView
                    android:id="@+id/tvChatEventName"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:singleLine="true"
                    android:layout_below="@id/tvTitleChatList"
                    android:text="Pekan ini, Si Kasep Mulai Menjaring Calon Kepsek"
                    android:textSize="12sp"
                    android:layout_toEndOf="@id/ivChatList"
                    android:textColor="@android:color/black"
            />


            <TextView
                    android:id="@+id/tvMessageChatList"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/ivChatList"
                    android:layout_below="@id/tvChatEventName"
                    android:singleLine="true"
                    android:textSize="12sp"
                    android:text="Ada yang bisa saya bantu mas?"
                    android:textStyle="bold"
            />

            <TextView
                    android:id="@+id/tvChatDateList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="9.04 AM"
                    android:layout_alignParentEnd="true"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimaryLight"
            />

            <TextView
                    android:id="@+id/tvUnreadMessage"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:layout_marginTop="12dp"
                    android:text="3"
                    android:background="@drawable/circle_shape_chat"
                    android:layout_below="@id/tvChatDateList"
                    android:layout_alignParentEnd="true"
                    android:textSize="12sp"
                    android:textColor="@color/white"
            />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>