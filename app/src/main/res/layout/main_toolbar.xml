<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="90dp"
        android:layout_marginBottom="10dp"
        android:elevation="16dp">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:id="@+id/ab_user_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/icon_user_profile"
            />
            <TextView
                    android:layout_marginEnd="10dp"
                    android:layout_toLeftOf="@id/ab_search"
                    android:id="@+id/ab_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/icon_notification"
            />
            <android.support.v7.widget.SearchView
                    android:id="@+id/ab_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layoutDirection="ltr"
                    app:searchIcon="@drawable/icon_search"
                    android:layout_marginBottom="13dp"
                    app:queryHint="Search"
                    app:searchHintIcon="@drawable/icon_search"
            />
        </RelativeLayout>
        <View
                android:background="@drawable/toolbar_dropshadow"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
    </LinearLayout>
    </android.support.v7.widget.Toolbar>