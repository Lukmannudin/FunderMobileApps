<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="80dp"
        android:fitsSystemWindows="true"
        android:elevation="16dp">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:id="@+id/ab_user_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableStart="@drawable/icon_user_profile"
            />

            <TextView
                    android:id="@+id/ab_title_dashboard"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/ab_user_profile"
                    android:text="Home"
                    android:paddingStart="50dp"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:layout_marginTop="0dp" android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true" android:layout_marginBottom="0dp"
                    android:layout_toEndOf="@+id/ab_user_profile" android:layout_marginStart="-8dp"
                    android:layout_toStartOf="@+id/tbUnreadChat" android:layout_marginLeft="-8dp"
                    android:layout_marginEnd="8dp"/>
            <TextView
                    android:paddingEnd="5dp"
                    android:layout_toLeftOf="@id/ab_search"
                    android:id="@+id/ab_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableStart="@drawable/icon_notification"
            />
            <TextView
                    android:id="@+id/ab_search"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingEnd="12dp"
                    android:paddingStart="5dp"
                    android:layout_alignParentEnd="true"
                    android:layoutDirection="ltr"
                    android:drawableStart="@drawable/icon_search"

            />
            <TextView
                    android:id="@+id/tbUnreadChat"
                    android:layout_alignParentEnd="true"
                    android:text="1"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:layout_marginEnd="43dp"
                    android:layout_marginTop="18dp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/circle_shape"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>
        </RelativeLayout>

    </LinearLayout>
</androidx.appcompat.widget.Toolbar>